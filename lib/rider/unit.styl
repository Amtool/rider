// @desc    unit conversion functions


@require 'setting'

// convert to rem unit
// default unit is `px`
rem($value)
    if unit($value) == 'px' || unit($value) == ''
        $value = round($value / $-base-font-size, $-unit-decimal-places)

    unit($value, 'rem')


// convert to em unit
em($value, $upper-value = $-base-font-size)
    if unit($value) == 'px' || unit($value) == ''
        $value = round($value / px($upper-value), $-unit-decimal-places)
    else if unit($value) == 'rem'
        $value = round(px($value) / px($upper-value), $-unit-decimal-places)

    unit($value, 'em')


// convert to px unit
px($value)
    if unit($value) == 'rem'
        $value = round($value * $-base-font-size, $-unit-decimal-places)

    unit($value, 'px')
